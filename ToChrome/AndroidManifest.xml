<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.unidevel.tochrome"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk 
        android:minSdkVersion="8" 
        android:targetSdkVersion="11" />

    <application
        android:icon="@drawable/chrome"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".MainActivity" android:icon="@drawable/chrome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
				<category android:name="android.intent.category.BROWSABLE"/>
				<category android:name="android.intent.category.APP_BROWSER"/>
	        </intent-filter>
            <intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>
				<data android:scheme="http"/>
				<data android:scheme="https"/>
				<data android:scheme="about"/>
				<data android:scheme="javascript"/>
				<data android:mimeType="text/html"/>
				<data android:mimeType="text/plain"/>
				<data android:mimeType="application/xhtml+xml"/>
				<data android:mimeType="multipart/related" android:scheme="file"/>
			</intent-filter>
        </activity>
        <activity
            android:label="@string/vs_name"
            android:name=".ViewSourceActivity" android:icon="@drawable/chrome">
			<intent-filter>
				<action android:name="android.intent.action.SEND"/>
				<category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="*/*" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.CHOOSER" />
				<category android:name="android.intent.category.DEFAULT"/>
				<data android:mimeType="*/*"/>
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>
				<data android:scheme="http"/>
				<data android:scheme="https"/>
				<data android:scheme="about"/>
				<data android:scheme="javascript"/>
				<data android:mimeType="text/html"/>
				<data android:mimeType="text/plain"/>
				<data android:mimeType="application/xhtml+xml"/>
				<data android:mimeType="multipart/related" android:scheme="file"/>
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>
				<data android:scheme="http"/>
				<data android:scheme="https"/>
				<data android:scheme="about"/>
				<data android:scheme="javascript"/>
			</intent-filter>
		</activity>
    </application>

</manifest>
