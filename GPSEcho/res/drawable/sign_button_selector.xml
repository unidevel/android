        </shape></item>
    <item><shape android:shape="oval">
            <!-- solid android:color="#9F2200" / -->
            <gradient android:angle="90" android:endColor="#80FF00FF" android:startColor="#FFFF0000" />
            <stroke android:width="2sp" android:color="#fff" />
        </shape></item>
</selector>