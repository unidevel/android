<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
         android:layout_height="wrap_content" 
         android:paddingBottom="4dip" android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
         <ImageView 
               android:layout_height="wrap_content" 
               android:id="@+id/icon" 
               android:layout_width="wrap_content" 
               android:layout_centerHorizontal="true"> 
         </ImageView>

         <TextView
             android:id="@+id/label"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/icon"
             android:layout_centerHorizontal="true"
             android:minLines="1" >

         </TextView>
</RelativeLayout>
